.list{
  padding: 20rpx 20rpx 20rpx 20rpx;
  margin: 40rpx 40rpx;

  border-radius: 10rpx;
  box-shadow: 0 0  10rpx rgba(128, 128, 128, 0.589);
  display: flex;
  flex-direction: column;
  background-color: #A06CD5;
  color: aliceblue;
  position: relative;
  font-size: 20rpx;
}
.show{
  text-align: center;
}
.showView{
  display: flex;
  flex-direction: column;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 1rpx;
  align-self: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
 }
text{
  font-size:.875rem;
}

.day{
  background-color: rgb(243, 238, 212);
  color:indigo;
