<!--页面根标签-->
<view class="content">
	<image class='background' src="../../assets/background.jpg" mode="aspectFill"></image>
</view>

<view class="container">
  <text class="head">X  X 查 课</text>
  <view class="login-form">
    <view class="title">学号绑定</view>
    <view class="line"></view>
    <!--账号-->
    <view class="inputView">
      <image mode="aspectFill" class="nameImage" src="https://6d69-mini3e-7g71rmyb1a8066fd-1307727472.tcb.qcloud.la/assets/account.png?sign=b8e269f8b6afec5c5c5e91e74eee895c&t=1638072551"></image>
      <input class="inputText" placeholder="请输入学号" bindinput="usernameInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image mode="aspectFill" class="keyImage" src="https://6d69-mini3e-7g71rmyb1a8066fd-1307727472.tcb.qcloud.la/assets/password.png?sign=2fe9f0e72b1217da17e880147046b478&t=1638073737"></image>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <van-button round color="linear-gradient(to right, #4bb0ff, #6149f6)" bindtap="login" block>登 录</van-button>
    </view>

  </view>







  
</view>