page {
  height: 100%;
  width: 100%;
}

.head {
  position: absolute;
  top:16%;
  height: 135rpx;
  display: block;
  box-sizing: border-box;
  font-size: 3rem;
  font-family: FZYaoti;
  text-align: center;
  animation: tracking-in-expand-fwd 3s cubic-bezier(0.215, 0.610, 0.355, 1.000) both;
}
@keyframes tracking-in-expand-fwd {
  0% {
    letter-spacing: -0.5em;
    transform: translateZ(-700px);
    opacity: 0;
  }
  40% {
    opacity: 0.6;
  }
  100% {
    transform: translateZ(0);
    opacity: 1;
  }
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
  position: fixed;
  /* background-color:#7209b7 */
}


/*表单内容*/
.login-form {
  position: absolute;
  display: flex;
  width: 100%;
  height: 55%;
  padding-top: 10px;
  flex-direction: column;
  align-items: center;
  background-color: rgba(192, 192, 192, 0.7);
  animation-name: move;
  animation-duration: 2s;
  animation-timing-function: ease;
  top: 45%;
}

@keyframes move {
  0% {
    top: 100%;
  }
  100% {
    top: 45%;
  }
}

.title {
  font-size: 1.5rem;
  font-family: 'Microsoft Yahei';
  font-weight: bold;
  margin-top: 5%;
}

.inputView {
  /* background-color: #fff;  */
  width: 600rpx;
  height: 100rpx;
  line-height: 45px;
  border-radius: 20px;
  border: 1px solid #999999;
  position: relative;
  background-color: #f0eaea;
}

/*输入框*/
.nameImage,
.keyImage {
  position: absolute;
  left: 15rpx;
  top: 27rpx;
  width: 51rpx;
  height: 45rpx;
}

.inputText {
  width: 520rpx;
  position: absolute;
  height: 45rpx;
  top: 27rpx;
  right: 20rpx;
  text-align: center;
  color: #cccccc;
  font-size: .875rem;
}

.line {
  margin-top: 8%;
}

