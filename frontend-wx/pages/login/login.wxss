page{ 
  height: 100%; 
 } 
 .background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  align-items: center;
  padding: 0; 
  box-sizing: border-box; 
  /* background-color: rgb(156, 23, 78) */
 } 
  
  
 /*表单内容*/
 .login-from { 
  margin-top: 70%; 
  display: flex; 
  flex-direction: column;
  align-items: center;
  height:100%; 
 } 
  
 .inputView { 
  /* background-color: #fff;  */
  width: 430rpx;
  height: 75rpx;
  line-height: 45px; 
  border-radius:20px;
  border:1px solid #999999;
  position: relative;
  background-color: #f0eaea;
 } 
  
 /*输入框*/
 .nameImage, .keyImage { 
  position:absolute;
  left: 15rpx; 
  top: 12rpx;
  width: 51rpx; 
  height: 45rpx;
 } 
  
 .inputText { 
  width: 350rpx;
  position:absolute;
  height: 45rpx;
  top: 15rpx;
  right: 20rpx;
  text-align: center;
  color: #cccccc; 
  font-size:.875rem;
 } 
 .line { 
  margin-top: 10%; 
 } 
  
